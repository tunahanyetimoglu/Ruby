class Vehicle

	attr_reader :type,:county,:price

	def initialize (type,county,price)
		@type = type
		@county = county
		@price = price
	end

	def expensive?(other)
		@price > other.price
	end

	def cheap?(other)
		@price < other.price
	end

	def equal?(other)
		@price == other.price
	end

	def discount(amount)
		@price-amount
	end

	def raise(amount)
		@price+amount
	end
	 
end


def main

    p, q = Vehicle.new("Taksi", "Samsun", 20000), Vehicle.new("Kamyon", "Kırşehir",80000)   

    puts "İki aracın fiyatları " + (p.equal?(q) ? 'eşittir.' : "eşit değildir.")
    puts "İki aracın fiyatlarından Samsun'daki Taksi fiyatı diğerine göre daha " + (q.expensive?(p) ? 'pahalı değildir.' : 'pahalıdır.')
    puts "İki aracın fiyatlarından Samsun'daki Taksi fiyatıı diğerine göre daha " + (p.cheap?(q) ?  'ucuz.' : 'ucuz değildir.')
    puts "Samsundaki Taksinin indirimli fiyatı  #{p.discount(2000)}"
    puts "Samsundaki Taksinin zamlı fiyatı  #{p.raise(2000)}"

end

main if __FILE__ == $PROGRAM_NAME
